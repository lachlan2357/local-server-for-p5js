{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
	"esModuleInterop": true,

	"rootDir": "./src/",
	"outDir": "./dist/",

    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
	"allowImportingTsExtensions": false
  },
  "include": ["./src"],
  "exclude": ["./pages"]
}
